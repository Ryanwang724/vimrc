" appearance
set number
set noshowmode
set showcmd
set nolist
set wrap
set linebreak
set cursorline
set ruler
set showtabline=2
set shortmess=I
set equalalways

" split window
set splitbelow
set splitright

" scroll
set scrolloff=3

" tab and space
set softtabstop=2
set shiftwidth=2
set expandtab

" color
set t_Co=256
syntax on
colorscheme torte
hi CursorLine cterm=none ctermbg=DarkMagenta ctermfg=White
hi CursorLineNr cterm=none ctermbg=DarkMagenta
